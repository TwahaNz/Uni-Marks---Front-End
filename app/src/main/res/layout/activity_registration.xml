    <ImageView
        android:id="@+id/imgCputLogo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/cput_logo"
        android:contentDescription="@string/app_name"
        android:background="#ffffff" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:text="Name:"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1d54ad" />

            <EditText
                android:id="@+id/studName"
                android:textSize="20sp"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/abc_input_method_navigation_guard" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:text="Surname:"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/studSurname"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/abc_input_method_navigation_guard" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:text="Email:"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_signin_btn_default_background" />

            <EditText
                android:id="@+id/studEmail"
                android:inputType="textEmailAddress"
                android:textSize="13sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/abc_input_method_navigation_guard" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <TextView
                android:text="Password:"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/material_deep_teal_500" />

            <EditText
                android:id="@+id/studPassword"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/abc_input_method_navigation_guard" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

    </LinearLayout>

    <Button
        android:id="@+id/btnPreview"
        android:text="Preview"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:background="@android:drawable/bottom_bar"
        android:onClick="btn_preview"/>

</LinearLayout>